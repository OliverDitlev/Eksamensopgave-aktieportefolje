<head>
    <%- include('partials/menu') %>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body id="main" class="main">
    <h1>Portfolio History</h1>

    <div class="history-container">
        <table class="history-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Action</th>
                    <th>Stock</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                <% history.forEach(item => { %>
                    <tr>
                        <td><%= new Date(item.date).toDateString() %></td>
                        <td><%= item.action %></td>
                        <td><%= item.stock %></td>
                        <td><%= item.price %></td>
                        <td><%= item.quantity %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

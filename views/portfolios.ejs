<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PortofolioTracker</title>

    <%- include('partials/menu') %>
    
    <link rel="stylesheet" href="/css/style.css">
</head>
<body id="main" class="main">
    <% if (account) { %>
        <h2>Portfolios for account: <%= account.name %> (<%= account.currency %>)</h2>
      <% } else { %>
        <h2>All portfolios</h2>
      <% } %>

    <h1 class="accounth1">Mine Porteføljer</h1>

    <!-- Knap til at oprette en ny portefølje -->
    <button id="openformbtn" onclick="openCreatePortfolio()">Opret Portefølje</button>

    <!-- Oversigt over eksisterende porteføljer -->
    <div class="accounttable">
        <table>
            <thead>
                <tr>
                    <th>Portefølje Navn</th>
                    <th>Oprettelsesdato</th>
                    <th>Samlet Erhvervelsespris</th>
                    <th>Samlet Forventet Værdi</th>
                    <th>Samlet Urealiseret Gevinst/Tab</th>
                    <th>Handlinger</th>
                </tr>
            </thead>
            <tbody>
                    <% portfolios.forEach(function(portfolio) { %>
                        <tr>
                            <td><%= portfolio.name %></td>
                            <td><%= portfolio.created_at.toLocaleDateString() %></td>
                            <td>0 DKK</td> 
                            <td>0 DKK</td> 
                            <td>0 DKK</td> 
                            <td>
                                <a href="/portfolios/<%= portfolio.portfolio_id %>">Se detaljer</a>
                            </td>
                        </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    
    <!-- Popup til oprettelse af portefølje -->
    <div id="createPortfolioPopup" class="popup hidden">
        <div id="insideform">
            <span id="closeformbtn" onclick="closeCreatePortfolio()">X</span>
            <h2>Opret ny portefølje</h2>
            <form action="/portfolios" method="POST">
                <input type="text" name="Name" placeholder="Navn på portefølje" required>
                <input type="hidden" name="accountId" value="<%= account_id %>">
                <button type="submit" class="greenbtn">Opret</button>
            </form>
        </div>
    </div>

    <script>
        function openCreatePortfolio() {
            document.getElementById('createPortfolioPopup').classList.remove('hidden');
        }
        function closeCreatePortfolio() {
            document.getElementById('createPortfolioPopup').classList.add('hidden');
        }
    </script>

</body>
</html>
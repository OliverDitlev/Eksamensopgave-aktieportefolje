<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PortofolioTracker</title>

    <%- include('partials/menu') %>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body id="main" class="main">
      <% if (typeof account !== 'undefined' && account) { %>
        <h2>Portfolios for account: <%= account.name %> (<%= account.currency %>)</h2>
      <% } else { %>
        <h2>All portfolios</h2>
      <% } %>

    <h1 class="accounth1">Mine Porteføljer</h1>

    <button id="openformbtn" onclick="openCreatePortfolio()">Opret Portefølje</button>

    <div class="accounttable">
        <table>
            <thead>
                <tr>
                    <th>Portefølje Navn</th>
                    <th>Oprettelsesdato</th>
                    <th>Samlet Erhvervelsespris</th>
                    <th>Samlet Forventet Værdi</th>
                    <th>Samlet Urealiseret Gevinst/Tab</th>
                    <th>Handlinger</th>
                </tr>
            </thead>
            <tbody>
                <% if (portfolios && portfolios.length > 0) { %>
                    <% portfolios.forEach(function(portfolio) { %>
                        <tr>
                            <td><%= portfolio.name %></td>
                            <td><%= new Date(portfolio.created_at).toLocaleDateString() %></td>
                            <td><%= portfolio.totalAcquisitionPrice?.toFixed(2) || "0.00" %> DKK</td>
                            <td><%= portfolio.totalExpectedValue?.toFixed(2) || "0.00" %> DKK</td>
                            <td><%= portfolio.totalUnrealizedProfitLoss?.toFixed(2) || "0.00" %> DKK</td>
                            <td>
                                <a class="accountbtn" href="/portfolios/<%= portfolio.portfolio_id %>">Se detaljer</a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr><td colspan="6">Ingen porteføljer fundet.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Opret portefølje popup -->
    <div id="createPortfolioPopup" class="popup hidden">
        <div id="insideform">
            <span id="closeformbtn" onclick="closeCreatePortfolio()">X</span>
            <h2>Opret ny portefølje</h2>
            <form action="/portfolios" method="POST">
                <input type="text" name="portfolioName" placeholder="Navn på portefølje" required>
                
                <!-- Vælg hvilken konto porteføljen skal høre til -->
                <select name="accountId" required>
                    <option value="">Vælg konto</option>
                    <% if (accounts && accounts.length > 0) { %>
                        <% accounts.forEach(function(account) { %>
                            <option value="<%= account.account_id %>"><%= account.name %> - <%= account.account_number %></option>
                        <% }); %>
                    <% } %>
                </select>

                <button type="submit" class="greenbtn">Opret</button>
            </form>
        </div>
    </div>

    <script>
        function openCreatePortfolio() {
            document.getElementById('createPortfolioPopup').classList.remove('hidden');
        }
        function closeCreatePortfolio() {
            document.getElementById('createPortfolioPopup').classList.add('hidden');
        }
    </script>

</body>
</html>